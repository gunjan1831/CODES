#include <bits stdc++.h="">

using namespace std;

int messageSpreading(int N)
{
    if(N == 0)
    {
        return 0;
    }
    
    return (N - 1) * 2;
}

int main()
{
    int T;
    cin >> T;
    
    while(T--)
    {
        int N;
        cin >> N;
        
        cout << messageSpreading(N) << endl;
    }
    return 0;
}
